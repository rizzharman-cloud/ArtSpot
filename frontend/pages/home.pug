doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Art Gallery - Home
    link(rel="stylesheet", href="/styles/main.css")
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap", rel="stylesheet")
  
  body
    .main-content
      header.header
        .container
          .header-content
            a.logo(href="/home") Art Gallery
            nav.nav-menu
              a.nav-link(href="/artwork") Browse Art
              a.nav-link(href="/likedArtworks") My Likes
              a.nav-link(href="/followed") Following
              a.nav-link(href="/notifications") Notifications
              if user.isArtist
                a.nav-link(href="/addArtwork") Add Artwork
                a.nav-link(href="/addWorkshop") Create Workshop
              button.btn.btn-secondary(id="logout") Logout

      .container
        .profile-header
          .profile-avatar= user.username.charAt(0).toUpperCase()
          .profile-name= user.username
          .profile-type= user.isArtist ? "Artist Account" : "Art Enthusiast"
        
        .card(style="margin: 30px 20px;")
          .card-body
            .card-title Welcome to Your Dashboard
            .card-text Explore amazing artworks, follow your favorite artists, and discover new creative inspiration.
            
            .stats-grid(style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px; margin-top: 30px;")
              .stat-card(style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 25px; border-radius: 15px; text-align: center;")
                .stat-number(style="font-size: 32px; font-weight: 700; margin-bottom: 5px;")= user.likes.length
                .stat-label Artworks Liked
              
              .stat-card(style="background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); color: white; padding: 25px; border-radius: 15px; text-align: center;")
                .stat-number(style="font-size: 32px; font-weight: 700; margin-bottom: 5px;")= user.followedArtists.length
                .stat-label Artists Following
              
              if user.isArtist
                .stat-card(style="background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); color: white; padding: 25px; border-radius: 15px; text-align: center;")
                  .stat-number(style="font-size: 32px; font-weight: 700; margin-bottom: 5px;")= user.createdArtworks.length
                  .stat-label Artworks Created
                
                .stat-card(style="background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); color: white; padding: 25px; border-radius: 15px; text-align: center;")
                  .stat-number(style="font-size: 32px; font-weight: 700; margin-bottom: 5px;")= user.createdWorkshops.length
                  .stat-label Workshops Created
            
            .action-buttons(style="margin-top: 30px; display: flex; gap: 15px; flex-wrap: wrap;")
              a.btn.btn-primary(href="/artwork") Explore Artworks
              if !user.isArtist
                button.btn.btn-success(id="changeType") Become an Artist
              else
                button.btn.btn-secondary(id="changeType") Switch to Patron

    script(src="/home.js")
    script.
      window.onload = init;