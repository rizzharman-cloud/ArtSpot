doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Art Gallery - Create Account
    link(rel="stylesheet", href="/styles/main.css")
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap", rel="stylesheet")
  
  body
    .main-content
      .form-container
        .form-title Join Our Community
        p.card-text Create your account to start your art journey
        
        .form-group
          label.form-label(for="username") Username
          input.form-input(type="text", id="username", placeholder="Choose a unique username")
        
        .form-group
          label.form-label(for="password") Password
          input.form-input(type="password", id="password", placeholder="Create a secure password")
        
        button.btn.btn-primary.btn-full(id="createAccount") Create Account
        
        .text-center(style="margin-top: 20px;")
          p Already have an account? 
            a(href="/", style="color: #667eea; font-weight: 600;") Sign In

    script(src="/createAccount.js")
    script.
      window.onload = init;